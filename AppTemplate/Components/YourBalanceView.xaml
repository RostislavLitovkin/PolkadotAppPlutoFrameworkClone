<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTemplate.Components.YourBalanceView">
    <VerticalStackLayout Spacing="0">
        <Label 
            Text="Your balance:"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />

        <Label
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Start" >
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding BalanceText}"
                          FontSize="50"
                          FontFamily="UnboundedBold"
                          FontAttributes="Bold" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
            
               
    </VerticalStackLayout>
</ContentView>
